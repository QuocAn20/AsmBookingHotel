@model DataAccess.Models.Comment

@{
    Layout = "";
}

<h1>Comment</h1>

<h4>My Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idcomment" class="control-label"></label>
                <input asp-for="Idcomment" class="form-control" />
                <span asp-validation-for="Idcomment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idacc" class="control-label"></label>
                <select asp-for="Idacc" class ="form-control" asp-items="@ViewBag.Idacc"></select>
            </div>
            <div class="form-group">
                <button class="submit" type="submit">Comment</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
